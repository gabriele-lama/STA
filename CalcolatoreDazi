<!-- Calcolatore -->
<h3>Calcolatore</h3>
<!-- Input: Costo -->
<input type="number" id="costo" placeholder="Costo (€)">
<!-- Input: Ricarico -->
<input type="number" id="ricarico" placeholder="Ricarico (€)">
<!-- Input: Percentuale da applicare (default 20%) -->
<input type="number" id="percentuale" placeholder="Percentuale (%)" value="20">
<!-- Input: Risultato finale della percentuale -->
<input type="text" id="valorePercentuale" placeholder="Risultato della percentuale" readonly>

<!-- Bottone per calcolare valore totale esportazione -->
<button onclick="calcolaSomma()">Calcola Valore Esportazione</button>
<!-- Bottone per calcolare la percentuale -->
<button onclick="calcolaPercentuale()">Calcola Percentuale</button>

<!-- Spazio per mostrare risultati finali -->
<div id="risultati"></div>
</div>

<script>


// Funzione per sommare costo e ricarico
function calcolaSomma() {
// Otteniamo i valori dagli input
const costo = parseInt(document.getElementById('costo').value);
const ricarico = parseInt(document.getElementById('ricarico').value);

// Sommiamo i due valori
somma = costo + ricarico;

// Mostriamo il totale
alert('Valore totale esportazione: €' + somma);
}

// Funzione per calcolare la percentuale e i risultati
function calcolaPercentuale() {
// Otteniamo il valore della percentuale
const perc = parseInt(document.getElementById('percentuale').value);

// Calcoliamo la percentuale sulla somma ottenuta prima
const valore = somma * (perc / 100);

// Mostriamo il valore nel campo dedicato
document.getElementById('valorePercentuale').value = valore.toFixed(2) + ' €';

// Calcoliamo il dazio (valore stesso in percentuale)
const dazioPercentuale = perc; // consideriamo che il valore stesso è il dazio per semplicità

// Calcoliamo la conversione in dollari
const valoreInDollari = valore * 1.1;

// Mostriamo tutto
document.getElementById('risultati').innerHTML = `
<p><strong>Dazio applicato:</strong> ${dazioPercentuale}%</p>
<p><strong>Valore in Dollari ($):</strong> ${valoreInDollari.toFixed(2)}</p>
`;
}
</script>
